<%- include('partials/header', { title: 'Вход', bodyClass: 'auth', user: null }) %>
<div class="row justify-content-center">
  <div class="col-12 col-md-6 col-lg-5">
    <div class="card card-glass p-3 p-md-4">
      <h1 class="h4 mb-1">Вход</h1>
      <p class="text-muted mb-3">Введите номер телефона и PIN.</p>
      <% if (error) { %>
        <div class="alert alert-danger py-2"><%= error %></div>
      <% } %>
      <form method="post" action="/login" autocomplete="on">
        <div class="mb-3">
          <label class="form-label">Телефон</label>
          <input name="phone" type="tel" class="form-control form-control-lg" placeholder="79991112233" required />
        </div>
        <div class="mb-3">
          <label class="form-label">PIN</label>
          <input name="pin" type="password" class="form-control form-control-lg" placeholder="••••" required />
        </div>
        <button class="btn btn-gold w-100 btn-lg" type="submit">Войти</button>
      </form>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
