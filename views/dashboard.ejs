<%- include('partials/header', { title: '–ü–∞–Ω–µ–ª—å —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è', user, bodyClass }) %>

<div class="d-flex align-items-end justify-content-between mb-3">
  <div>
    <div class="text-muted small">–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å</div>
    <div class="h5 m-0"><%= user.fio || '–ë–µ–∑ –∏–º–µ–Ω–∏' %> <span class="badge text-bg-light border"><%= user.role %></span></div>
    <div class="text-muted small"><%= user.phone %></div>
  </div>
</div>

<% if (!byZone.length) { %>
  <div class="alert alert-warning">–£ –≤–∞—Å –Ω–µ—Ç –¥–æ—Å—Ç—É–ø–Ω—ã—Ö —É—Å—Ç—Ä–æ–π—Å—Ç–≤ (–ø—Ä–æ–≤–µ—Ä—å—Ç–µ –∑–æ–Ω—ã –¥–æ—Å—Ç—É–ø–∞ –≤ users.json –∏–ª–∏ –≤ –∞–¥–º–∏–Ω–∫–µ).</div>
<% } %>

<div class="accordion" id="zonesAccordion">
  <% byZone.forEach((z, idx) => { const cid = 'zone_' + idx; %>
    <div class="accordion-item shadow-sm rounded-4 overflow-hidden mb-2">
      <h2 class="accordion-header" id="h_<%= cid %>">
        <button class="accordion-button <%= idx===0 ? '' : 'collapsed' %>" type="button"
                data-bs-toggle="collapse" data-bs-target="#c_<%= cid %>"
                aria-expanded="<%= idx===0 ? 'true' : 'false' %>" aria-controls="c_<%= cid %>">
          <span class="me-2">üìç</span>
          <span class="fw-semibold"><%= z.zoneName %></span>
          <span class="ms-auto badge text-bg-light border"><%= z.devices.length %></span>
        </button>
      </h2>
      <div id="c_<%= cid %>" class="accordion-collapse collapse <%= idx===0 ? 'show' : '' %>" data-bs-parent="#zonesAccordion">
        <div class="accordion-body">
          <div class="vstack gap-2">
            <% z.devices.forEach(d => { %>
              <div class="device-row d-flex flex-column flex-sm-row align-items-start align-items-sm-center justify-content-between gap-2">
                <div class="me-sm-3">
                  <div class="fw-semibold"><%= d.name %></div>
                  <div class="text-muted small"><%= d.id %></div>
                </div>
                <button class="btn-lux" onclick="openDevice('<%= d.id %>', this)">–û—Ç–∫—Ä—ã—Ç—å</button>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<script>
async function openDevice(id, btn){
  const old = btn.innerText;
  btn.disabled = true;
  btn.innerText = '...';
  try{
    const r = await fetch('/api/open/' + encodeURIComponent(id), { method:'POST' });
    const j = await r.json();
    if(!j.ok) throw new Error(j.error || '–û—à–∏–±–∫–∞');
    btn.innerText = '‚úÖ';
    setTimeout(()=>btn.innerText=old, 900);
  }catch(e){
    alert(e.message);
    btn.innerText = '‚ö†Ô∏è';
    setTimeout(()=>btn.innerText=old, 1200);
  }finally{
    btn.disabled = false;
  }
}
</script>

