<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title><%= title || "Parking Git" %></title>
  <meta name="color-scheme" content="dark light">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/public/app.css" rel="stylesheet">
</head>
<body class="<%= bodyClass || '' %>">
<nav class="navbar navbar-expand-lg premium-navbar border-bottom">
  <div class="container">
    <a class="navbar-brand fw-semibold" href="/">СКУД <span>5К5</span></a>

    <% if (typeof user !== 'undefined' && user) { %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#pgNav"
              aria-controls="pgNav" aria-expanded="false" aria-label="Меню">
        <span class="navbar-toggler-icon"></span>
      </button>
    <% } %>

    <div class="collapse navbar-collapse" id="pgNav">
      <div class="ms-auto d-flex nav-actions flex-wrap align-items-center py-2 py-lg-0">
        <% if (typeof user !== 'undefined' && user) { %>
          <a class="btn btn-sm btn-outline-secondary" href="/logs">Мои логи</a>
          <% if (user.role === 'admin') { %>
            <a class="btn btn-sm btn-outline-primary" href="/admin/users">Админ</a>
          <% } %>
          <a class="btn btn-sm btn-outline-danger" href="/logout">Выйти</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<main class="container py-4">
  <%- body %>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
