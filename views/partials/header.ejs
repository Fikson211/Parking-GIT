<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title><%= title || "Parking Git" %></title>
  <meta name="color-scheme" content="dark light">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/public/app.css" rel="stylesheet">
</head>
<body class="<%= bodyClass || '' %>">
<nav class="navbar navbar-expand-lg premium-navbar border-bottom">
  <div class="container">
    <a class="navbar-brand fw-semibold" href="/">СКУД <span>5К5</span></a>
    <div class="d-flex gap-2">
      <% if (user) { %>
        <a class="btn btn-sm btn-outline-secondary" href="/logs">Журнал транзита</a>
        <% if (user.role === 'admin') { %>
          <div class="btn-group">
            <a class="btn btn-sm btn-outline-primary" href="/admin/transit">Транзит</a>
            <a class="btn btn-sm btn-outline-primary" href="/admin/users">Пользователи</a>
            <a class="btn btn-sm btn-outline-primary" href="/admin/devices">Устройства</a>
            <a class="btn btn-sm btn-outline-primary" href="/admin/audit">Журнал</a>
          </div>
        <% } %>
        <a class="btn btn-sm btn-outline-danger" href="/logout">Выйти</a>
      <% } %>
    </div>
  </div>
</nav>
<main class="container py-4">
