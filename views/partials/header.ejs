<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title || 'Parking GIT' %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    :root{
      --bg1:#0b1220;
      --bg2:#0a0f1a;
      --card:#0f172a;
      --card2:#0c1426;
      --text:#e9eefc;
      --muted:#a9b6d3;
      --line:rgba(255,255,255,.08);
      --gold:#d7b56d;
    }
    html,body{height:100%;}
    body{font-family:Inter,system-ui,-apple-system,Segoe UI,Roboto,Arial; background: radial-gradient(1200px 600px at 20% -10%, rgba(215,181,109,.18), transparent 55%), radial-gradient(900px 500px at 90% 0%, rgba(99,102,241,.18), transparent 60%), linear-gradient(180deg, var(--bg1), var(--bg2)); color:var(--text);}
    .navbar{backdrop-filter: blur(10px); background: rgba(9, 14, 25, .7) !important; border-bottom:1px solid var(--line)}
    .brand-badge{display:inline-flex; align-items:center; gap:.6rem; font-weight:700; letter-spacing:.3px}
    .brand-logo{width:28px;height:28px;border-radius:9px; object-fit:cover; box-shadow: 0 6px 20px rgba(0,0,0,.35); border:1px solid rgba(255,255,255,.12)}
    .glass{background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03)); border:1px solid var(--line); box-shadow: 0 12px 40px rgba(0,0,0,.35);}
    .card{border:1px solid var(--line); background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03));}
    .card .text-muted{color: var(--muted) !important;}
    .btn-gold{background: linear-gradient(180deg, rgba(215,181,109,1), rgba(184,146,78,1)); border:0; color:#10131c; font-weight:700;}
    .btn-gold:hover{filter:brightness(1.05)}
    .btn-outline-light{border-color: rgba(255,255,255,.18)}
    .badge-soft{background: rgba(215,181,109,.15); color: var(--gold); border:1px solid rgba(215,181,109,.25)}
    .table{--bs-table-bg:transparent; --bs-table-color:var(--text); --bs-table-border-color: var(--line)}
    .table thead th{color: var(--muted); font-weight:600}
    .table td,.table th{vertical-align:middle}
    .form-control, .form-select{background: rgba(255,255,255,.06); border:1px solid var(--line); color:var(--text)}
    .form-control:focus, .form-select:focus{border-color: rgba(215,181,109,.45); box-shadow: 0 0 0 .25rem rgba(215,181,109,.15)}
    .form-control::placeholder{color: rgba(233,238,252,.45)}
    .small{color: var(--muted)}
    .zone-btn{border-radius: 16px; padding: 14px 14px; display:flex; align-items:center; justify-content:space-between; gap:12px; width:100%}
    .zone-btn .left{display:flex; flex-direction:column; gap:2px; text-align:left}
    .zone-btn .title{font-weight:700; font-size:14px}
    .zone-btn .sub{font-size:12px; color: var(--muted)}
    .zone-btn .icon{width:36px;height:36px;border-radius:14px;background: rgba(215,181,109,.12); border:1px solid rgba(215,181,109,.22); display:flex; align-items:center; justify-content:center; color: var(--gold)}
    .container{max-width: 1080px}
    @media (max-width: 576px){
      .container{padding-left:14px; padding-right:14px}
      .table-responsive{border:1px solid var(--line); border-radius: 16px; overflow:hidden}
      .zone-btn{padding: 12px 12px}
    }
  


/* --- safety: prevent overflow outside cards/viewport --- */
*{box-sizing:border-box}
html,body{max-width:100%;overflow-x:hidden}
img,svg,video,canvas{max-width:100%;height:auto}
input,select,textarea,button{max-width:100%}
.card{overflow:hidden}
.table-responsive{overflow-x:auto}
.text-wrap{white-space:normal;word-break:break-word}
.navbar,.topbar,.nav{flex-wrap:wrap}

</style>
</head>
<body class="<%= (typeof bodyClass !== \'undefined\' && bodyClass) ? bodyClass : \'\' %>">
<nav class="navbar navbar-expand-lg navbar-dark sticky-top">
  <div class="container">
    <a class="navbar-brand brand-badge" href="/">
      <img class="brand-logo" src="/brand.jpg" alt="logo" onerror="this.style.display='none'" />
      <span>Parking GIT</span>
      <span class="badge badge-soft ms-2">Premium</span>
    </a>
    <div class="ms-auto d-flex align-items-center gap-2">
      <% if (user) { %>
        <div class="small d-none d-sm-block"><%= user.fio || user.phone %></div>
        <form method="post" action="/logout" class="m-0">
          <button class="btn btn-outline-light btn-sm" type="submit">Выйти</button>
        </form>
      <% } %>
    </div>
  </div>
</nav>
<main class="container py-4">
