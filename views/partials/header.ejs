<%
  const _title = (typeof title !== 'undefined' && title) ? title : 'Parking GIT';
  const _bodyClass = (typeof bodyClass !== 'undefined' && bodyClass) ? bodyClass : '';
  const _user = (typeof user !== 'undefined') ? user : null;
  // Some environments may accidentally expose a non-string "path". We only accept string paths.
  const _path = (typeof path === 'string') ? path : '';
%>
<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= _title %></title>
  <script>
    // Theme: apply as early as possible to avoid "flash".
    (function(){
      try {
        var t = localStorage.getItem('theme');
        if (t === 'light' || t === 'dark') {
          document.documentElement.setAttribute('data-theme', t);
        }
      } catch (e) {}
    })();
  </script>
  <style>
    :root{
      --bg1:#0b1020;
      --bg2:#0a0f1d;

      /* surfaces */
      --card: rgba(255,255,255,.08);
      --card2: rgba(255,255,255,.06);
      --border: rgba(255,255,255,.14);

      /* text (brighter for readability in dark theme) */
      --text: rgba(255,255,255,.97);
      --muted: rgba(255,255,255,.80);

      /* accents */
      --accent: #9cc9ff;
      --accent2: rgba(156,201,255,.18);

      /* derived surfaces */
      --field-bg: rgba(0,0,0,.22);
      --field-border: rgba(255,255,255,.18);
      --table-bg: rgba(0,0,0,.18);

      /* elevation */
      --shadow-card: 0 18px 60px rgba(0,0,0,.28);
      --shadow-elev: 0 26px 90px rgba(0,0,0,.34);

      --ring: rgba(156,201,255,.55);
      --ring-soft: rgba(156,201,255,.18);
    }

    /* Light theme */
    html[data-theme="light"]{
      /* premium light */
      --bg1:#fafbff;
      --bg2:#f0f4fb;

      --card: rgba(255,255,255,.92);
      --card2: rgba(255,255,255,.84);
      --border: rgba(15,23,42,.10);

      --text: rgba(17,24,39,.92);
      --muted: rgba(17,24,39,.60);

      --accent: #2a63ff;
      --accent2: rgba(42,99,255,.12);

      --field-bg: rgba(255,255,255,.96);
      --field-border: rgba(15,23,42,.12);
      --table-bg: rgba(15,23,42,.03);

      --shadow-card: 0 10px 30px rgba(15,23,42,.10);
      --shadow-elev: 0 22px 80px rgba(15,23,42,.14);

      --ring: rgba(42,99,255,.55);
      --ring-soft: rgba(42,99,255,.18);
    }
    *{ box-sizing:border-box; }
    html,body{ height:100%; }
    body.modal-open{ overflow:hidden; }
    body{
      margin:0;
      font-family: ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto,Arial;
      color: var(--text);
      background:
        radial-gradient(1200px 600px at 15% 10%, rgba(120,110,255,.25), transparent 60%),
        radial-gradient(900px 500px at 80% 0%, rgba(0,220,255,.20), transparent 60%),
        linear-gradient(180deg, var(--bg1), var(--bg2));
    }
    html[data-theme="light"] body{
      background:
        radial-gradient(1200px 600px at 15% 10%, rgba(120,110,255,.10), transparent 60%),
        radial-gradient(900px 500px at 80% 0%, rgba(0,220,255,.10), transparent 60%),
        linear-gradient(180deg, var(--bg1), var(--bg2));
    }

    /* Light theme: premium crisp controls */
    html[data-theme="light"] input::placeholder{ color: rgba(17,24,39,.38); }
    html[data-theme="light"] .brand img{ border-color: rgba(15,23,42,.10); }
    html[data-theme="light"] .tab{ border-color: rgba(15,23,42,.10); background: rgba(255,255,255,.72); }
    html[data-theme="light"] .tab:hover{ background: rgba(255,255,255,.90); }
    html[data-theme="light"] .tab.active{ border-color: rgba(42,99,255,.45); background: rgba(42,99,255,.06); box-shadow: 0 0 0 2px var(--ring-soft) inset; }
    html[data-theme="light"] .btn{ background: rgba(255,255,255,.86); border-color: rgba(15,23,42,.12); }
    html[data-theme="light"] .btn:hover{ background: rgba(255,255,255,.96); }
    html[data-theme="light"] .btn-ghost{ background: transparent; }
    html[data-theme="light"] .btn-soft{ background: rgba(17,24,39,.05)!important; border-color: rgba(15,23,42,.10)!important; }
    html[data-theme="light"] .btn-soft:hover{ background: rgba(17,24,39,.08)!important; }
    html[data-theme="light"] .btn-primary{ background: linear-gradient(180deg, rgba(42,99,255,.20), rgba(42,99,255,.12)); border-color: rgba(42,99,255,.42); }
    html[data-theme="light"] .btn-danger{ background: rgba(255,107,107,.10); border-color: rgba(255,107,107,.28); }
    html[data-theme="light"] .btn-gold{ background: rgba(245,187,72,.18)!important; border-color: rgba(245,187,72,.34)!important; }
    html[data-theme="light"] .table-wrap{ border-color: rgba(15,23,42,.10); }
    html[data-theme="light"] th{ color: rgba(17,24,39,.70); }
    html[data-theme="light"] th, html[data-theme="light"] td{ border-bottom: 1px solid rgba(15,23,42,.08); }
    html[data-theme="light"] .badge, html[data-theme="light"] .chip, html[data-theme="light"] .badge-soft{
      border-color: rgba(15,23,42,.10); background: rgba(255,255,255,.72);
    }
    html[data-theme="light"] .alert{ background: rgba(255,255,255,.92); border-color: rgba(15,23,42,.10); color: rgba(17,24,39,.88); }
    a{ color:inherit; text-decoration:none; }
    /* Avoid UA default button text becoming too dark in dark theme */
    button{ color: inherit; font: inherit; }
    .container{ max-width:1240px; margin:0 auto; padding:16px 16px 28px; }
    .topbar{
      display:flex; align-items:center; justify-content:space-between; gap:12px;
      flex-wrap:wrap;
      padding:14px 16px; border-radius:16px;
      background: var(--card); border:1px solid var(--border);
      backdrop-filter: blur(10px); overflow:hidden;
      box-shadow: var(--shadow-card);
    }
    .brand{ display:flex; align-items:center; gap:10px; min-width:0; font-weight:700; white-space:nowrap; }
    .brand img{ width:34px; height:34px; border-radius:10px; object-fit:cover; border:1px solid rgba(255,255,255,.16); flex:0 0 auto; }
    .top-right{ display:flex; align-items:center; gap:10px; min-width:0; justify-content:flex-end; flex-wrap:wrap; }
    .muted{ color: var(--muted); font-size:13px; }
    .spacer{ height:12px; }
    .nav{
      margin-top:10px; display:flex; gap:8px; padding:10px 12px;
      flex-wrap:wrap;
      border-radius:16px; background: var(--card2);
      border:1px solid var(--border); backdrop-filter: blur(10px);
      box-shadow: var(--shadow-card);
      overflow-x:visible;
      align-items:center;
      row-gap:8px;
    }
    .tab{
      flex:0 0 auto; display:inline-flex; align-items:center;
      color: var(--text);
      padding:10px 12px; border-radius:999px;
      border:1px solid rgba(255,255,255,.14); background: rgba(255,255,255,.06);
      font-size:14px; white-space:nowrap;
      min-height:40px;
    }
    .tab.active{ border-color: rgba(156,201,255,.55); box-shadow: 0 0 0 2px rgba(156,201,255,.14) inset; }
    .card{
      margin-top:12px; border-radius:18px;
      background: var(--card); border:1px solid var(--border);
      padding:14px; overflow:hidden; backdrop-filter: blur(10px);
      box-shadow: var(--shadow-card);
    }
    .row{ display:flex; gap:12px; flex-wrap:wrap; align-items:flex-end; }
    .field{ min-width:180px; flex:1 1 220px; }
    label{ display:block; font-size:12px; color: var(--muted); margin-bottom:6px; }
    input, select, textarea{
      width:100%; padding:10px 12px; border-radius:12px;
      border:1px solid var(--field-border); background: var(--field-bg);
      color: var(--text); outline:none;
    }
    input:focus, select:focus, textarea:focus{
      border-color: var(--ring);
      box-shadow: 0 0 0 4px var(--ring-soft);
    }
    input::placeholder{ color: rgba(255,255,255,.50); }
    textarea{ min-height:84px; resize:vertical; }
    .btn{
      display:inline-flex; align-items:center; justify-content:center;
      color: var(--text);
      padding:10px 12px; border-radius:12px;
      border:1px solid rgba(255,255,255,.18); background: rgba(255,255,255,.10);
      cursor:pointer; white-space:nowrap;
      min-height:40px;
      line-height:1.1;
      transition: background .15s ease, border-color .15s ease, transform .08s ease, box-shadow .15s ease;
    }
    .btn:hover{ background: rgba(255,255,255,.14); transform: translateY(-1px); box-shadow: 0 14px 30px rgba(0,0,0,.16); }
    html[data-theme="light"] .btn:hover{ box-shadow: 0 12px 22px rgba(15,23,42,.10); }
    .btn-primary{ background: rgba(156,201,255,.18); border-color: rgba(156,201,255,.40); }
    .btn-danger{ background: rgba(255,107,107,.18); border-color: rgba(255,107,107,.42); }
    .btn-ghost{ background: transparent; border-color: rgba(255,255,255,.18); }
    .badge{
      display:inline-flex; align-items:center;
      padding:4px 10px; border-radius:999px;
      border:1px solid rgba(255,255,255,.16); background: rgba(255,255,255,.06);
      font-size:12px; white-space:nowrap;
    }
    .table-wrap{
      width:100%; overflow-x:auto;
      border-radius:14px; border:1px solid rgba(255,255,255,.14);
      background: var(--table-bg);
    }
    table{ width:100%; border-collapse:collapse; min-width:560px; }
    th, td{
      padding:10px 12px;
      border-bottom:1px solid rgba(255,255,255,.10);
      vertical-align:top; font-size:13px; word-break:break-word;
    }
    th{ text-align:left; color: rgba(255,255,255,.86); font-weight:700; }
    tr:last-child td{ border-bottom:none; }
    .chips{ display:flex; flex-wrap:wrap; gap:6px; }
    .chip{
      display:inline-flex; align-items:center;
      padding:5px 10px; border-radius:999px;
      border:1px solid rgba(255,255,255,.16); background: rgba(255,255,255,.06);
      font-size:12px; white-space:nowrap;
    }
    .alert{
      padding:10px 12px; border-radius:14px;
      border:1px solid rgba(255,255,255,.18); background: rgba(0,0,0,.22);
      margin-top:10px; color: rgba(255,255,255,.85);
    }
    .alert.warn{ border-color: rgba(255,210,90,.45); }
    .alert.err{ border-color: rgba(255,107,107,.45); }
    @media (max-width:640px){ table{ min-width:720px; } }
  
    /* --- bootstrap-like utilities (small subset) --- */
    .d-flex{ display:flex!important; }
    .flex-wrap{ flex-wrap:wrap!important; }
    .align-items-center{ align-items:center!important; }
    .align-items-start{ align-items:flex-start!important; }
    .align-items-baseline{ align-items:baseline!important; }
    .align-items-end{ align-items:flex-end!important; }
    .justify-content-between{ justify-content:space-between!important; }
    .justify-content-end{ justify-content:flex-end!important; }
    .gap-1{ gap:6px!important; }
    .gap-2{ gap:10px!important; }

    .d-grid{ display:grid!important; }

    .mb-0{ margin-bottom:0!important; }
    .mb-2{ margin-bottom:10px!important; }
    .mb-3{ margin-bottom:14px!important; }
    .mb-4{ margin-bottom:18px!important; }

    .m-0{ margin:0!important; }
    .p-0{ padding:0!important; }
    .p-2{ padding:10px!important; }
    .p-3{ padding:14px!important; }
    .w-100{ width:100%!important; }
    .overflow-hidden{ overflow:hidden!important; }

    .small{ font-size:12px!important; }
    .h4{ font-size:20px!important; margin:0 0 4px; }
    .h6{ font-size:14px!important; margin:0 0 8px; }

    .fw-semibold{ font-weight:700!important; }
    .text-mono{ font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace!important; }

    .text-muted{ color: var(--muted)!important; }
    .text-end{ text-align:right!important; }
    .text-center{ text-align:center!important; }
    .text-nowrap{ white-space:nowrap!important; }
    .text-wrap{ white-space:normal!important; }

    /* Buttons used in admin/log pages */
    .btn-soft{ background: rgba(255,255,255,.08)!important; border-color: rgba(255,255,255,.18)!important; }
    .btn-soft:hover{ background: rgba(255,255,255,.12)!important; }
    .btn-gold{ background: rgba(255,210,90,.18)!important; border-color: rgba(255,210,90,.40)!important; }
    .btn-gold:hover{ background: rgba(255,210,90,.24)!important; }

    .btn-sm{ padding:8px 10px!important; border-radius:12px!important; font-size:13px!important; min-height:34px!important; }

    /* –í–Ω—É—Ç—Ä–∏ flex-–≥—Ä—É–ø–ø —Ñ–æ—Ä–º—ã –Ω–µ –¥–æ–ª–∂–Ω—ã —Å–æ–∑–¥–∞–≤–∞—Ç—å –ª–∏—à–Ω–∏–µ –æ—Ç—Å—Ç—É–ø—ã */
    .d-flex form{ margin:0!important; }

    /* Card alias */
    .card-glass{ background: var(--card)!important; }

    /* Forms alias */
    .form-label{ display:block; font-size:12px; color: var(--muted); margin-bottom:6px; }
    .form-control, .form-select{ width:100%; padding:10px 12px; border-radius:12px;
      border:1px solid var(--field-border); background: var(--field-bg); color: var(--text); outline:none; }
    .form-control-sm, .form-select-sm{ padding:8px 10px; border-radius:12px; font-size:13px; }

    .form-check{ display:flex; align-items:center; gap:8px; }
    .form-check-input{ width:18px; height:18px; }
    .form-switch .form-check-input{ width:42px; height:22px; border-radius:999px; }
    .me-1{ margin-right:6px!important; }

    /* Tables */
    .table-responsive{ width:100%; overflow-x:auto; }
    .table{ width:100%; border-collapse:collapse; }
    .table-dark{ background: var(--table-bg); }

    .table-hover tbody tr:hover{ background: rgba(255,255,255,.04); }
    .align-middle td, .align-middle th{ vertical-align:middle; }

    .badge-soft{
      display:inline-flex; align-items:center;
      padding:4px 10px; border-radius:999px;
      border:1px solid rgba(255,255,255,.16); background: rgba(255,255,255,.06);
      font-size:12px; white-space:nowrap;
    }

    /* Page header action buttons (right side) */
    .page-actions{ margin-top:8px!important; }
    @media (max-width:520px){ .page-actions{ margin-top:0!important; } }

    /* Dashboard: zone first, then devices */
    .zone-grid{ display:grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap:12px; }
    .zone-tile{
      text-align:left; width:100%;
      color: var(--text);
      padding:12px; border-radius:16px;
      border:1px solid var(--border);
      background: var(--card2);
      cursor:pointer;
      transition: transform .08s ease, box-shadow .15s ease, border-color .15s ease, background .15s ease;
    }
    .zone-tile:hover{ transform: translateY(-1px); box-shadow: 0 16px 28px rgba(0,0,0,.16); }
    html[data-theme="light"] .zone-tile:hover{ box-shadow: 0 16px 28px rgba(15,23,42,.10); }
    .zone-tile.active{ border-color: rgba(156,201,255,.55); box-shadow: 0 0 0 2px rgba(156,201,255,.14) inset; }
    html[data-theme="light"] .zone-tile.active{ border-color: rgba(42,99,255,.45); box-shadow: 0 0 0 2px var(--ring-soft) inset; background: rgba(42,99,255,.06); }
    .zone-title{ font-weight:800; line-height:1.2; }
    .zone-sub{ color: var(--muted); font-size:12px; margin-top:4px; overflow:hidden; text-overflow:ellipsis; white-space:nowrap; }
    .zone-meta{ margin-top:10px; display:flex; gap:8px; flex-wrap:wrap; }
    .device-grid{ display:grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap:10px; }
    .device-btn{ width:100%; }

    /* Users: minimalist cards + modal editor */
    .users-grid{ display:grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap:12px; }
    .user-card{ padding:12px; border-radius:16px; border:1px solid var(--border); background: var(--card2);
      box-shadow: 0 14px 28px rgba(0,0,0,.14);
      transition: transform .08s ease, box-shadow .15s ease, border-color .15s ease, background .15s ease;
    }
    html[data-theme="light"] .user-card{ box-shadow: 0 14px 28px rgba(15,23,42,.10); }
    .user-card:hover{ transform: translateY(-1px); }
    .user-card .user-name{ font-weight:800; line-height:1.2; }
    .user-card .user-sub{ color: var(--muted); font-size:12px; margin-top:4px; }
    .user-card .user-actions{ margin-top:10px; display:flex; gap:8px; flex-wrap:wrap; align-items:center; }

    .modal-backdrop{ position:fixed; inset:0; display:none; align-items:center; justify-content:center; padding:16px; z-index:1000;
      background: rgba(0,0,0,.62);
    }
    html[data-theme="light"] .modal-backdrop{ background: rgba(15,23,42,.40); }
    .modal-backdrop.open{ display:flex; }
    .modal{
      width:min(760px, 100%);
      border-radius:18px;
      background: var(--card);
      border:1px solid var(--border);
      box-shadow: var(--shadow-elev);
      overflow:hidden;
      backdrop-filter: blur(12px);
    }
    .modal-header{ display:flex; align-items:flex-start; justify-content:space-between; gap:10px; padding:14px 14px; background: var(--card2); border-bottom:1px solid var(--border); }
    .modal-title{ font-weight:900; }
    .modal-body{ padding:14px; }
    .modal-footer{ display:flex; justify-content:flex-end; gap:10px; flex-wrap:wrap; padding:14px; background: var(--card2); border-top:1px solid var(--border); }
    .modal-grid{ display:grid; grid-template-columns: repeat(2, minmax(0, 1fr)); gap:10px; }
    @media (max-width:720px){ .modal-grid{ grid-template-columns: 1fr; } }



    .zone-chip{
      display:inline-flex; align-items:center; gap:6px;
      padding:6px 10px;
      border-radius:999px;
      border:1px solid var(--border);
      background: var(--card2);
      cursor:pointer; user-select:none;
    }
    .zone-chip:hover{ background: var(--accent2); }
    .zone-chip input{ margin:0; }

    /* Simple responsive grid for .row + .col-* (enough for forms) */
    .row{ align-items:stretch; }
    .g-2{ gap:10px!important; }
    .gx-2{ column-gap:10px!important; }
    .gy-2{ row-gap:10px!important; }
    .col-12{ flex: 1 1 100%!important; min-width: 220px; }
    .col-6{ flex: 1 1 calc(50% - 10px)!important; min-width: 200px; }
    @media (min-width: 768px){
      .p-md-3{ padding:14px!important; }
      .p-md-4{ padding:18px!important; }
      .w-md-auto{ width:auto!important; }
      .d-md-table-cell{ display:table-cell!important; }
      .col-md-1{ flex: 0 0 calc(8.333% - 10px)!important; min-width: 120px; }
      .col-md-2{ flex: 0 0 calc(16.666% - 10px)!important; min-width: 160px; }
      .col-md-3{ flex: 0 0 calc(25% - 10px)!important; min-width: 200px; }
      .col-md-4{ flex: 0 0 calc(33.333% - 10px)!important; min-width: 240px; }
      .col-md-6{ flex: 0 0 calc(50% - 10px)!important; min-width: 320px; }
    }
    .d-none{ display:none!important; }

  
    /* UI fixes: action buttons spacing + logs top buttons offset */
    .action-buttons{ display:flex; flex-direction:column; gap:8px; align-items:flex-end; }
    .action-buttons form{ margin:0; }
    .logs-top-actions{ margin-top: 10px; }
    @media (max-width: 576px){
      .logs-top-actions{ width:100%; justify-content:flex-start; }
    }

  
    /* === Readability fixes for admin/logs tabs and dropdowns === */
    body.admin-page,
    body.logs-page,
    body.admin-audit-page{
      background:
        radial-gradient(900px 520px at 12% -12%, rgba(67,97,238,.10), transparent 68%),
        radial-gradient(900px 520px at 88% 112%, rgba(72,149,239,.09), transparent 68%),
        linear-gradient(180deg, #050914 0%, #060d1b 52%, #07101f 100%);
    }
    body.admin-page::before,
    body.logs-page::before,
    body.admin-audit-page::before,
    body.admin-page::after,
    body.logs-page::after,
    body.admin-audit-page::after{
      opacity:.28;
      filter: blur(95px);
    }
    body.admin-page .card,
    body.logs-page .card,
    body.admin-audit-page .card,
    body.admin-page .table-wrap,
    body.logs-page .table-wrap,
    body.admin-audit-page .table-wrap{
      background: rgba(10, 16, 31, .82);
      border-color: rgba(255,255,255,.10);
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
    }
    body.admin-page .page-title,
    body.logs-page .page-title,
    body.admin-audit-page .page-title{
      text-shadow: 0 1px 0 rgba(0,0,0,.35);
    }
    /* –°–ø–∏—Å–æ–∫ –≤ –≤—ã–ø–∞–¥–∞—é—â–∏—Ö select (Windows/Chrome) */
    body.admin-page select,
    body.logs-page select,
    body.admin-audit-page select{
      color-scheme: dark;
    }
    body.admin-page select option,
    body.logs-page select option,
    body.admin-audit-page select option{
      color: #eaf2ff !important;
      background: #0d1426 !important;
    }
    body.admin-page select optgroup,
    body.logs-page select optgroup,
    body.admin-audit-page select optgroup{
      color: #b6c7e4 !important;
      background: #0a1120 !important;
    }

  </style>
</head>
<body class="bg <%= _bodyClass %>">
  <div class="container">
    <div class="topbar">
      <a class="brand" href="/" title="–ù–∞ –¥–∞—à–±–æ—Ä–¥">
        <img src="/public/brand.jpg" alt="logo" />
        <span>Parking GIT</span>
      </a>
      <div class="top-right">
        <button class="btn btn-ghost" type="button" id="themeToggle" title="–¢–µ–º–∞" aria-label="–ü–µ—Ä–µ–∫–ª—é—á–∏—Ç—å —Ç–µ–º—É">üåô</button>
        <% if (_user) { %>
          <span class="muted"><%= _user.fio || _user.phone || _user.id %></span>
          <a class="btn btn-ghost" href="/logout">–í—ã–π—Ç–∏</a>
        <% } %>
      </div>
    </div>

