<%
  const _title = (typeof title !== 'undefined' && title) ? title : 'Parking GIT';
  const _bodyClass = (typeof bodyClass !== 'undefined' && bodyClass) ? bodyClass : '';
  const _user = (typeof user !== 'undefined') ? user : null;
  // Some environments may accidentally expose a non-string "path". We only accept string paths.
  const _path = (typeof path === 'string') ? path : '';
%>
<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= _title %></title>
  <style>
    :root{
      --bg1:#0b1020;
      --bg2:#0a0f1d;
      --card: rgba(255,255,255,.08);
      --card2: rgba(255,255,255,.06);
      --border: rgba(255,255,255,.14);
      --text: rgba(255,255,255,.92);
      --muted: rgba(255,255,255,.66);
      --accent: #9cc9ff;
    }
    *{ box-sizing:border-box; }
    html,body{ height:100%; }
    body{
      margin:0;
      font-family: ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto,Arial;
      color: var(--text);
      background:
        radial-gradient(1200px 600px at 15% 10%, rgba(120,110,255,.25), transparent 60%),
        radial-gradient(900px 500px at 80% 0%, rgba(0,220,255,.20), transparent 60%),
        linear-gradient(180deg, var(--bg1), var(--bg2));
    }
    a{ color:inherit; text-decoration:none; }
    .container{ max-width:1240px; margin:0 auto; padding:16px 16px 28px; }
    .topbar{
      display:flex; align-items:center; justify-content:space-between; gap:12px;
      flex-wrap:wrap;
      padding:14px 16px; border-radius:16px;
      background: var(--card); border:1px solid var(--border);
      backdrop-filter: blur(10px); overflow:hidden;
    }
    .brand{ display:flex; align-items:center; gap:10px; min-width:0; font-weight:700; white-space:nowrap; }
    .brand img{ width:34px; height:34px; border-radius:10px; object-fit:cover; border:1px solid rgba(255,255,255,.16); flex:0 0 auto; }
    .top-right{ display:flex; align-items:center; gap:10px; min-width:0; justify-content:flex-end; flex-wrap:wrap; }
    .muted{ color: var(--muted); font-size:13px; }
    .nav{
      margin-top:10px; display:flex; gap:8px; padding:10px 12px;
      flex-wrap:wrap;
      border-radius:16px; background: var(--card2);
      border:1px solid var(--border); backdrop-filter: blur(10px);
      overflow-x:visible;
      align-items:center;
      row-gap:8px;
    }
    .tab{
      flex:0 0 auto; display:inline-flex; align-items:center;
      padding:10px 12px; border-radius:999px;
      border:1px solid rgba(255,255,255,.14); background: rgba(255,255,255,.06);
      font-size:14px; white-space:nowrap;
      min-height:40px;
    }
    .tab.active{ border-color: rgba(156,201,255,.55); box-shadow: 0 0 0 2px rgba(156,201,255,.14) inset; }
    .card{
      margin-top:12px; border-radius:18px;
      background: var(--card); border:1px solid var(--border);
      padding:14px; overflow:hidden; backdrop-filter: blur(10px);
    }
    .row{ display:flex; gap:12px; flex-wrap:wrap; align-items:flex-end; }
    .field{ min-width:180px; flex:1 1 220px; }
    label{ display:block; font-size:12px; color: var(--muted); margin-bottom:6px; }
    input, select, textarea{
      width:100%; padding:10px 12px; border-radius:12px;
      border:1px solid rgba(255,255,255,.18); background: rgba(0,0,0,.22);
      color: var(--text); outline:none;
    }
    input::placeholder{ color: rgba(255,255,255,.35); }
    textarea{ min-height:84px; resize:vertical; }
    .btn{
      display:inline-flex; align-items:center; justify-content:center;
      padding:10px 12px; border-radius:12px;
      border:1px solid rgba(255,255,255,.18); background: rgba(255,255,255,.10);
      cursor:pointer; white-space:nowrap;
      min-height:40px;
      line-height:1.1;
    }
    .btn:hover{ background: rgba(255,255,255,.14); }
    .btn-primary{ background: rgba(156,201,255,.18); border-color: rgba(156,201,255,.40); }
    .btn-danger{ background: rgba(255,107,107,.18); border-color: rgba(255,107,107,.42); }
    .btn-ghost{ background: transparent; border-color: rgba(255,255,255,.18); }
    .badge{
      display:inline-flex; align-items:center;
      padding:4px 10px; border-radius:999px;
      border:1px solid rgba(255,255,255,.16); background: rgba(255,255,255,.06);
      font-size:12px; white-space:nowrap;
    }
    .table-wrap{
      width:100%; overflow-x:auto;
      border-radius:14px; border:1px solid rgba(255,255,255,.14);
      background: rgba(0,0,0,.18);
    }
    table{ width:100%; border-collapse:collapse; min-width:560px; }
    th, td{
      padding:10px 12px;
      border-bottom:1px solid rgba(255,255,255,.10);
      vertical-align:top; font-size:13px; word-break:break-word;
    }
    th{ text-align:left; color: rgba(255,255,255,.75); font-weight:700; }
    tr:last-child td{ border-bottom:none; }
    .chips{ display:flex; flex-wrap:wrap; gap:6px; }
    .chip{
      display:inline-flex; align-items:center;
      padding:5px 10px; border-radius:999px;
      border:1px solid rgba(255,255,255,.16); background: rgba(255,255,255,.06);
      font-size:12px; white-space:nowrap;
    }
    .alert{
      padding:10px 12px; border-radius:14px;
      border:1px solid rgba(255,255,255,.18); background: rgba(0,0,0,.22);
      margin-top:10px; color: rgba(255,255,255,.85);
    }
    .alert.warn{ border-color: rgba(255,210,90,.45); }
    .alert.err{ border-color: rgba(255,107,107,.45); }
    @media (max-width:640px){ table{ min-width:720px; } }
  
    /* --- bootstrap-like utilities (small subset) --- */
    .d-flex{ display:flex!important; }
    .flex-wrap{ flex-wrap:wrap!important; }
    .align-items-center{ align-items:center!important; }
    .align-items-end{ align-items:flex-end!important; }
    .justify-content-between{ justify-content:space-between!important; }
    .justify-content-end{ justify-content:flex-end!important; }
    .gap-1{ gap:6px!important; }
    .gap-2{ gap:10px!important; }

    .d-grid{ display:grid!important; }

    .mb-0{ margin-bottom:0!important; }
    .mb-2{ margin-bottom:10px!important; }
    .mb-3{ margin-bottom:14px!important; }
    .mb-4{ margin-bottom:18px!important; }

    .m-0{ margin:0!important; }
    .p-0{ padding:0!important; }
    .p-2{ padding:10px!important; }
    .p-3{ padding:14px!important; }
    .w-100{ width:100%!important; }
    .overflow-hidden{ overflow:hidden!important; }

    .small{ font-size:12px!important; }
    .h4{ font-size:20px!important; margin:0 0 4px; }
    .h6{ font-size:14px!important; margin:0 0 8px; }

    .fw-semibold{ font-weight:700!important; }
    .text-mono{ font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace!important; }

    .text-muted{ color: var(--muted)!important; }
    .text-end{ text-align:right!important; }
    .text-center{ text-align:center!important; }
    .text-nowrap{ white-space:nowrap!important; }
    .text-wrap{ white-space:normal!important; }

    /* Buttons used in admin/log pages */
    .btn-soft{ background: rgba(255,255,255,.08)!important; border-color: rgba(255,255,255,.18)!important; }
    .btn-soft:hover{ background: rgba(255,255,255,.12)!important; }
    .btn-gold{ background: rgba(255,210,90,.18)!important; border-color: rgba(255,210,90,.40)!important; }
    .btn-gold:hover{ background: rgba(255,210,90,.24)!important; }

    .btn-sm{ padding:8px 10px!important; border-radius:12px!important; font-size:13px!important; min-height:34px!important; }

    /* Внутри flex-групп формы не должны создавать лишние отступы */
    .d-flex form{ margin:0!important; }

    /* Card alias */
    .card-glass{ background: var(--card)!important; }

    /* Forms alias */
    .form-label{ display:block; font-size:12px; color: var(--muted); margin-bottom:6px; }
    .form-control, .form-select{ width:100%; padding:10px 12px; border-radius:12px;
      border:1px solid rgba(255,255,255,.18); background: rgba(0,0,0,.22); color: var(--text); outline:none; }
    .form-control-sm, .form-select-sm{ padding:8px 10px; border-radius:12px; font-size:13px; }

    .form-check{ display:flex; align-items:center; gap:8px; }
    .form-check-input{ width:18px; height:18px; }
    .form-switch .form-check-input{ width:42px; height:22px; border-radius:999px; }
    .me-1{ margin-right:6px!important; }

    /* Tables */
    .table-responsive{ width:100%; overflow-x:auto; }
    .table{ width:100%; border-collapse:collapse; }
    .table-dark{ background: rgba(0,0,0,.18); }
    .table-hover tbody tr:hover{ background: rgba(255,255,255,.04); }
    .align-middle td, .align-middle th{ vertical-align:middle; }

    .badge-soft{
      display:inline-flex; align-items:center;
      padding:4px 10px; border-radius:999px;
      border:1px solid rgba(255,255,255,.16); background: rgba(255,255,255,.06);
      font-size:12px; white-space:nowrap;
    }


    .zone-chip{
      display:inline-flex; align-items:center; gap:6px;
      padding:6px 10px;
      border-radius:999px;
      border:1px solid rgba(255,255,255,.16);
      background: rgba(255,255,255,.06);
      cursor:pointer; user-select:none;
    }
    .zone-chip:hover{ background: rgba(255,255,255,.09); }
    .zone-chip input{ margin:0; }

    /* Simple responsive grid for .row + .col-* (enough for forms) */
    .row{ align-items:stretch; }
    .g-2{ gap:10px!important; }
    .gx-2{ column-gap:10px!important; }
    .gy-2{ row-gap:10px!important; }
    .col-12{ flex: 1 1 100%!important; min-width: 220px; }
    .col-6{ flex: 1 1 calc(50% - 10px)!important; min-width: 200px; }
    @media (min-width: 768px){
      .p-md-3{ padding:14px!important; }
      .p-md-4{ padding:18px!important; }
      .w-md-auto{ width:auto!important; }
      .d-md-table-cell{ display:table-cell!important; }
      .col-md-1{ flex: 0 0 calc(8.333% - 10px)!important; min-width: 120px; }
      .col-md-2{ flex: 0 0 calc(16.666% - 10px)!important; min-width: 160px; }
      .col-md-3{ flex: 0 0 calc(25% - 10px)!important; min-width: 200px; }
      .col-md-4{ flex: 0 0 calc(33.333% - 10px)!important; min-width: 240px; }
      .col-md-6{ flex: 0 0 calc(50% - 10px)!important; min-width: 320px; }
    }
    .d-none{ display:none!important; }

  </style>
</head>
<body class="bg <%= _bodyClass %>">
  <div class="container">
    <div class="topbar">
      <div class="brand">
        <img src="/public/brand.jpg" alt="logo" />
        <span>Parking GIT</span>
      </div>
      <div class="top-right">
        <% if (_user) { %>
          <span class="muted"><%= _user.fio || _user.phone || _user.id %></span>
          <a class="btn btn-ghost" href="/logout">Выйти</a>
        <% } %>
      </div>
    </div>

    <% if (_user) { %>
      <nav class="nav" aria-label="Навигация">
        <a class="tab <%= _path === '/' ? 'active' : '' %>" href="/">Дашборд</a>
        <% if ((_user.role || '') === 'admin') { %>
          <a class="tab <%= _path.startsWith('/logs') ? 'active' : '' %>" href="/logs">Журнал транзита</a>
          <a class="tab <%= _path.startsWith('/admin/users') ? 'active' : '' %>" href="/admin/users">Пользователи</a>
          <a class="tab <%= _path.startsWith('/admin/devices') ? 'active' : '' %>" href="/admin/devices">Устройства</a>
          <a class="tab <%= _path.startsWith('/admin/zones') ? 'active' : '' %>" href="/admin/zones">Зоны</a>
          <a class="tab <%= _path.startsWith('/admin/audit') ? 'active' : '' %>" href="/admin/audit">Аудит</a>
        <% } %>
      </nav>
    <% } %>
