<%- include('partials/header', { title, bodyClass, user, path: '/admin/devices' }) %>

<div class="mb-3">
  <div class="d-flex flex-wrap gap-2 align-items-start justify-content-between">
    <h1 class="h4 mb-0">Устройства</h1>
    <div class="d-flex flex-wrap gap-2 align-items-center page-actions">
      <a class="btn btn-soft" href="/admin/users">Пользователи</a>
      <a class="btn btn-soft" href="/admin/zones">Зоны</a>
      <a class="btn btn-soft" href="/admin/audit">Аудит</a>
    </div>
  </div>
  <div class="text-muted small">Добавляй устройства и привязывай к зонам</div>
</div>

<div class="card card-glass p-3 p-md-4 mb-3">
  <h2 class="h6 mb-3">Добавить/обновить устройство</h2>
  <form method="post" action="/admin/devices/create" class="row g-2">
    <div class="col-12 col-md-3">
      <label class="form-label small text-muted">ID</label>
      <input class="form-control" name="id" placeholder="door_1" />
    </div>
    <div class="col-12 col-md-4">
      <label class="form-label small text-muted">Название</label>
      <input class="form-control" name="name" placeholder="Дверь серверная" required />
    </div>
    <div class="col-12 col-md-3">
      <label class="form-label small text-muted">Зона</label>
      <select class="form-select" name="zoneId">
        <option value="">—</option>
        <% (zones || []).forEach(z => { %>
          <option value="<%= z.id %>"><%= z.name %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-12 col-md-2">
      <label class="form-label small text-muted">Метод</label>
      <select class="form-select" name="method">
        <option value="http">http</option>
        <option value="rodos">rodos</option>
      </select>
    </div>
    <div class="col-12">
      <label class="form-label small text-muted">URL/IP</label>
      <input class="form-control" name="url" placeholder="http://... или 192.168.1.10" />
    </div>
    <div class="col-12">
      <button class="btn btn-primary w-100 w-md-auto" type="submit">Сохранить</button>
    </div>
  </form>
</div>

<div class="card card-glass p-0 overflow-hidden">
  <div class="table-responsive">
    <table class="table table-dark table-hover align-middle m-0">
      <thead>
        <tr>
          <th>ID</th>
          <th>Название</th>
          <th>Зона</th>
          <th>Метод</th>
          <th>URL/IP</th>
          <th class="text-center">Активен</th>
          <th class="text-end">Действия</th>
        </tr>
      </thead>
      <tbody>
        <% (devices || []).forEach(d => { %>
          <tr>
            <td class="text-mono" style="min-width:180px"><%= d.id %></td>
            <td style="min-width:220px">
              <input form="devupd-<%= d.id %>" class="form-control form-control-sm" name="name" value="<%= d.name || '' %>" />
            </td>
            <td style="min-width:220px">
              <select form="devupd-<%= d.id %>" class="form-select form-select-sm" name="zoneId">
                <option value="">—</option>
                <% (zones || []).forEach(z => { %>
                  <option value="<%= z.id %>" <%= (d.zoneId === z.id) ? 'selected' : '' %>><%= z.name %></option>
                <% }) %>
              </select>
            </td>
            <td style="min-width:120px">
              <select form="devupd-<%= d.id %>" class="form-select form-select-sm" name="method">
                <option value="http" <%= (d.method === 'http') ? 'selected' : '' %>>http</option>
                <option value="rodos" <%= (d.method === 'rodos') ? 'selected' : '' %>>rodos</option>
              </select>
            </td>
            <td style="min-width:260px">
              <input form="devupd-<%= d.id %>" class="form-control form-control-sm" name="url" value="<%= d.url || '' %>" />
            </td>
            <td class="text-center" style="min-width:110px">
              <input
                form="devupd-<%= d.id %>"
                class="form-check-input"
                type="checkbox"
                name="is_active"
                <%= (d.is_active !== false) ? 'checked' : '' %>
              />
            </td>
            <td class="text-end" style="min-width:150px">
              <button class="btn btn-soft btn-sm" type="submit" form="devupd-<%= d.id %>">Обновить</button>
              <form id="devupd-<%= d.id %>" method="post" action="/admin/devices/<%= d.id %>/update"></form>
            </td>
          </tr>
        <% }) %>
        <% if (!devices || !devices.length) { %>
          <tr><td colspan="7" class="text-muted p-3">Устройств нет</td></tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('partials/footer') %>
